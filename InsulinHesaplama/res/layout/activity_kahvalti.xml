                android:id="@+id/chkCay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkLeftSag"
                android:text="@string/chkCay" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checkTop"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/chkMarul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkLeftSol"
                android:text="@string/chkMarul" />

            <CheckBox
                android:id="@+id/chkMeyvesuyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkLeftSag"
                android:text="@string/chkMeyvesuyu" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checkTop"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/chkSucuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkLeftSol"
                android:text="@string/chkSucuk" />

            <CheckBox
                android:id="@+id/chkSut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkLeftSag"
                android:text="@string/chkSut" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/checkLeftSol"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnTamam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            android:text="@string/btnKahvaltiTamam" />
    </LinearLayout>

</LinearLayout>