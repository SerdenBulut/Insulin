                android:layout_marginLeft="@dimen/checkLeftSol"
                android:text="@string/chkYogurt" />

            <CheckBox
                android:id="@+id/chkEkmek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkLeftSag"
                android:text="@string/chkEkmek" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checkTop"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/chkKaymak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkLeftSol"
                android:text="@string/chkKaymak" />

